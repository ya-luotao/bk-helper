{
    "manifest_version": 3,
    "name": "BK Helper",
    "version": "1.0",
    "description": "bk helper",
    "icons": {
        "48": "icon.png"
    },
    "action": {
        "default_icon": {
            "48": "icon.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://sh.zu.ke.com/zufang*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
